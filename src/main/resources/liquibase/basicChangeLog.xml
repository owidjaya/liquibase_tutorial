<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="1" author="oscarw">
        <createTable tableName="Employee" schemaName="dbo">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false" />
            </column>    
            <column name="firstName" type="varchar(255)" />
            <column name="lastName" type="varchar(255)" />
            <column name="dateOfBirth" type="datetime" />
        </createTable>
    </changeSet>
    <changeSet id="2" author="oscarw">
        <addColumn tableName="Employee">
            <column name="address" type="text" />
        </addColumn>
    </changeSet>
    <changeSet id="3" author="oscarw">
        <loadData catalogName="TEST"
                encoding="UTF-8"
                file="src/main/resources/liquibase/employee.csv"
                quotchar='"'
                schemaName="dbo"
                separator=","
                tableName="employee">
        </loadData>
        <rollback>
            <delete catalogName="TEST"
            schemaName="dbo"
            tableName="employee">
                <where>id in (1,2,3)</where>
            </delete>
        </rollback>
</changeSet>
</databaseChangeLog>